@model IEnumerable<Hafiz136.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stu_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stu_Cell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Student_Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var hafiz in Model) {
        <tr>
            <td>
                @Html.DisplayFor(i => hafiz.Stu_Name)
            </td>
            <td>
                @Html.DisplayFor(k => hafiz.Stu_Cell)
            </td>
            <td>
                @Html.DisplayFor(k => hafiz.Email)
            </td>
            <td>
               <img src="~/Projectimg/@hafiz.Student_Picture" style="height:100px;width:100px"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@hafiz.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@hafiz.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@hafiz.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
